{
  "manifest_version": 3,
  "name": "Glancify",
  "description": "This extension collects News Feeds and Notfications to display on the New Tab",
  "version": "1.0",

  "browser_action": {
    "default_popup": "extension_popup.html"
  },

  "icons": {
    "16": "Images/glancify_icon.png",
    "32": "Images/glancify_icon.png",
    "64": "Images/glancify_icon.png",
    "128": "Images/glancify_icon.png"
  },

  "background": {
    "page": "extension_newtab.html",
    "persistent": false
  },

  "chrome_url_overrides": {
    "newtab": "extension_newtab.html"
  },

  "permissions": [
    "notifications",
    "https://twitter.com/i/notifications",
    "https://www.quora.com/notifications",
    "https://github.com/notifications",
    "https://www.codechef.com/",
    "https://www.linkedin.com/notifications",
    "https://apis.google.com/js/api.js",
    "https://www.hackerrank.com/notifications",
    "https://www.hackerrank.com/contests"
  ]
}
